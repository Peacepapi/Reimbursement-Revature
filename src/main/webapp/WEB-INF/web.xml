<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>viewAllReimb</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.ViewAllReimbServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>viewAllReimb</servlet-name>
		<url-pattern>/App/home</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/App/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>viewReimbsByStatus</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.ViewReimbsByStatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>viewReimbsByStatus</servlet-name>
		<url-pattern>/App/ViewReimbsByStatus</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>submitReimb</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.CreateReimbServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>submitReimb</servlet-name>
		<url-pattern>/App/ReimbCreate</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>processReimb</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.ProcessReimbServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>processReimb</servlet-name>
		<url-pattern>/App/ProcessReimb</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ErrorHandler</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.ErrorHandlerServlet</servlet-class>
	</servlet>
	
 	<servlet-mapping>
		<servlet-name>ErrorHandler</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<error-code>500</error-code>
		<location>/error</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/error</location>
	</error-page> 
	
	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>com.revature.reimbursement.Servlet.RetrieveImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/App/ReimbImage</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>auth</filter-name>
		<filter-class>com.revature.reimbursement.Servlet.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>auth</filter-name>
		<url-pattern>/App/*</url-pattern>
	</filter-mapping>

</web-app>